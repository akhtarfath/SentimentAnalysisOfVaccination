<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/localConditionTitle"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/local_conditions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/localConditionShare"
        style="@style/ContentTitleText"
        android:layout_width="18dp"
        android:layout_height="21dp"
        android:contentDescription="@string/share_world_condition"
        android:paddingTop="3dp"
        android:src="@drawable/ic_share2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numberOfCases"
        style="@style/SubTitleText"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="start|center"
        android:paddingTop="5dp"
        android:layout_gravity="center"
        android:text="@string/number_of_case"
        app:layout_constraintTop_toBottomOf="@+id/localConditionTitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/numberOfCases">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/titleNumberPositiveID"
                    style="@style/SubTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineHeight="23dp"
                    android:text="@string/positive_title"
                    android:textAlignment="center"
                    android:textColor="@color/dark"
                    android:textFontWeight="900"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="5dp"
                    tools:targetApi="p" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/positive_title"
                    android:src="@drawable/ic_covid_positive"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/numberPositiveID"
                    style="@style/TitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineHeight="23dp"
                    android:text="@string/positive_num"
                    android:textAlignment="center"
                    android:textColor="@color/google_yellow"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4"
                    tools:targetApi="p" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/titleNumberOfCuresID"
                    style="@style/SubTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineHeight="23dp"
                    android:text="@string/recovered_title"
                    android:textAlignment="center"
                    android:textColor="@color/dark"
                    android:textFontWeight="900"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="5dp"
                    tools:targetApi="p" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/recovered_title"
                    android:src="@drawable/ic_syringe"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/numberOfCuresID"
                    style="@style/TitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineHeight="23dp"
                    android:text="@string/recovered_num"
                    android:textAlignment="center"
                    android:textColor="@color/google_green"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView6"
                    tools:targetApi="p" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/titleNumberOfDeathsID"
                    style="@style/SubTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineHeight="23dp"
                    android:text="@string/death_title"
                    android:textAlignment="center"
                    android:textColor="@color/dark"
                    android:textFontWeight="900"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="5dp"
                    tools:targetApi="p" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:contentDescription="@string/death_title"
                    android:src="@drawable/ic_dead"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/numberOfDeathsID"
                    style="@style/TitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineHeight="23dp"
                    android:text="@string/death_num"
                    android:textAlignment="center"
                    android:textColor="@color/google_red"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView8"
                    tools:targetApi="p" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>