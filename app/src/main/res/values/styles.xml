<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DetailTheme" parent="Theme.SentimentAnalysisOfVaccinationApp">
        <item name="actionBarSize">47dip</item>
        <item name="colorPrimary">@color/sky_light</item>
        <item name="iconTint">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_round_arrow_back</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="OverFlow" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <!--<item name="android:src">@drawable/ic_overflow</item>-->
    </style>
    <!--  Bottom Nav  -->
    <style name="BottomNavigationBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:paddingHorizontal" tools:targetApi="o">13dp</item>
        <item name="itemIconSize">20dp</item>
        <item name="android:itemIconDisabledAlpha">?android:attr/disabledAlpha</item>
        <item name="itemRippleColor">@color/light_blue_navy_200</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>
    <!-- Title Text -->
    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sf_pro_text_heavy</item>
        <item name="android:lineHeight" tools:targetApi="p">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">10dp</item>
    </style>

    <style name="SubTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">10dp</item>
    </style>

    <style name="ContentTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">10dp</item>
    </style>

    <!-- Image Skeleton -->
    <style name="NewsImage" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="android:src">@color/silver</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
    </style>
</resources>